<aura:component controller="CreateAccountActivity" implements="force:appHostable,flexipage:availableForAllPageTypes">
    <aura:handler name="init" action="{!c.doInit}" value="{!this}" />
    <aura:registerevent name="createRecords" type="force:createRecord"/>    
    <div class="slds-size--1-of-2"> 
        <button type="button" class="slds-button slds-button--brand" onclick="{!c.createActivity}">Create Activity</button>  
    </div>
</aura:component>